include README.md
include LICENSE
include requirements.txt
include prompt_manager/py.typed

# Include all package data
recursive-include prompt_manager *

# Exclude Bazel-specific directories and files
exclude bazel-*
exclude bazel-bin
exclude bazel-out
exclude bazel-testlogs
exclude bazel-prompt-manager
prune bazel-*
prune bazel-bin
prune bazel-out
prune bazel-testlogs
prune bazel-prompt-manager

# Exclude Python build artifacts
global-exclude */__pycache__/*
global-exclude *.py[cod]
global-exclude *.so
global-exclude .git*
global-exclude .bazelrc
global-exclude .bazel-*
global-exclude *.egg-info
global-exclude *.egg-info/*
